<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:gravity="center_vertical"
        android:background="@drawable/bg_black_stroke_10dp_corner"
        >

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:button="@drawable/bg_check_selector"
            android:textSize="@dimen/sp_25"
            android:clickable="false"
            android:lines="1"/>

        <LinearLayout
            android:id="@+id/ll_date_preset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:lines="1"
                android:textSize="@dimen/sp_20"
                android:text="预"
                android:gravity="center"
                android:background="@drawable/bg_gray_stroke_5dp_corner"
                />

            <TextView
                android:id="@+id/tv_date_preset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/black"
                android:lines="1"
                android:textSize="@dimen/sp_25"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_25"
        android:layout_marginStart="@dimen/dp_20"
        android:text="答案"
        />


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_20"
        android:src="@mipmap/icon_setting_delete"
        />


</LinearLayout>