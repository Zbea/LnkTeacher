<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@drawable/bg_black_stroke_10dp_corner"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20">


    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:button="@drawable/bg_check_selector" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:id="@+id/tv_standard_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:text="答案"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_25" />

    <LinearLayout
        android:id="@+id/ll_date_preset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_stroke_5dp_corner"
            android:gravity="center"
            android:lines="1"
            android:text="预"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_date_preset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24" />

    </LinearLayout>


</LinearLayout>