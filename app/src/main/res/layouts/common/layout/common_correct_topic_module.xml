<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/width"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_40"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="@dimen/dp_30"
        android:src="@mipmap/icon_close"
        />

    <TextView
        android:id="@+id/tv_save_module"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="@dimen/dp_30"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="保存"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_gary_arch"
        />

    <LinearLayout
        android:id="@+id/ll_module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_correct_module_1"
                />

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_60"
                android:src="@mipmap/icon_correct_module_2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_correct_module_3"
                />

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_60"
                android:src="@mipmap/icon_correct_module_4"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/bg_black_stroke_10dp_corner"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_topic_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_topic_reduce"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_module"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="@dimen/dp_10"
                />


            <ImageView
                android:id="@+id/iv_topic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_topic_add"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_topic_child"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_topic_reduce_child"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_topic_reduce_1"
                />

            <ImageView
                android:id="@+id/iv_topic_add_child"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="80dp"
                android:src="@mipmap/icon_topic_add_1"
                />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>