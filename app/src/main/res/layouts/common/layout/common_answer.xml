<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/bg_page"
    >

    <ImageView
        android:id="@+id/iv_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitCenter" />


    <LinearLayout
        android:layout_width="@dimen/drawing_tool_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/click_line_width"
        android:paddingEnd="@dimen/click_line_width"
        android:layout_marginTop="@dimen/statusbar_height"
        >

        <ImageView
            android:id="@+id/btn_answer_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawing_tool_height"
            android:layout_marginTop="250dp"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_page_up"
            android:background="@drawable/click_btn_transparent_line_black"
            />

        <ImageView
            android:id="@+id/btn_answer_down"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawing_tool_height"
            android:layout_marginTop="@dimen/drawing_tool_dimens"
            android:scaleType="center"
            android:src="@mipmap/icon_draw_page_down"
            android:background="@drawable/click_btn_transparent_line_black"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/iv_close_answer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawing_tool_height"
            android:layout_marginBottom="@dimen/drawing_tool_dimens"
            android:scaleType="center"
            android:src="@mipmap/icon_close"
            android:background="@drawable/click_btn_transparent_line_black"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_answer_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/tv_answer_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>