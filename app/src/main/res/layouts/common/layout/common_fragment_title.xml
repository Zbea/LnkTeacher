<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_height"
    android:gravity="center_vertical"
    android:background="@color/bg_page">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="33dp"
        android:textColor="@color/black"
        android:textSize="36sp"
        />


    <TextView
        android:id="@+id/tv_search"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_gary_arch"
        android:drawableStart="@mipmap/icon_search"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_20"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_fragment_grade"
        android:layout_width="160dp"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_30"
        android:drawableRight="@mipmap/icon_arrow_down"
        android:drawablePadding="@dimen/dp_10"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_40"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        android:gravity="center_vertical"
        android:text="@string/grade_selector"
        android:visibility="gone"
        android:background="@drawable/bg_gary_arch"
        />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_40"
        android:visibility="gone"
        android:src="@mipmap/icon_group_add"/>

    <ImageView
        android:id="@+id/iv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_40"
        android:visibility="gone"
        android:src="@mipmap/icon_group_create"/>


    <ImageView
        android:id="@+id/iv_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_40"
        android:visibility="gone"
        android:src="@mipmap/icon_manager"/>


</LinearLayout>
