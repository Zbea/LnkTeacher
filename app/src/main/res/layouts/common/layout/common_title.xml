<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_height"
    android:gravity="center_vertical"
    android:background="@color/bg_page">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:scaleType="center"
        android:src="@mipmap/icon_back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="31sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="36dp">

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="160dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_30"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:drawablePadding="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_40"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="班级选择"
            android:background="@drawable/bg_gray_stroke_5dp_corner"
            />


        <TextView
            android:id="@+id/tv_province"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_30"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:visibility="gone"
            android:background="@drawable/bg_gary_arch"
            />
        <TextView
            android:id="@+id/tv_course"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_30"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:visibility="gone"
            android:background="@drawable/bg_gary_arch"
            />
        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_30"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:visibility="gone"
            android:background="@drawable/bg_gary_arch"
            />
        <TextView
            android:id="@+id/tv_semester"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_30"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:visibility="gone"
            android:background="@drawable/bg_gary_arch"
            />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_30"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:visibility="gone"
            android:background="@drawable/bg_gary_arch"
            />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="200dp"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_gary_arch"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp_40"
            >

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_search"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="200dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_5"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22"
                android:background="@color/color_transparent"
                />

        </LinearLayout>
    </LinearLayout>



    <ImageView
        android:id="@+id/iv_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_40"
        android:visibility="gone"
        android:src="@mipmap/icon_manager"/>

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="80dp"
        android:layout_height="@dimen/dp_45"
        android:layout_marginEnd="@dimen/dp_40"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        android:gravity="center"
        android:text="发送"
        android:visibility="gone"
        android:background="@drawable/bg_gray_stroke_10dp_corner"
        />

</LinearLayout>
