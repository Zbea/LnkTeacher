<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_height"
    android:orientation="horizontal"
    android:background="@color/bg_page"
    >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_back"
        android:scaleType="center"
        android:background="@drawable/click_btn_transparent_line_black"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lines="1"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/navigation_text"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navigation_type_height"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/ll_year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/dp_50"
            >

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="2022"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_30"
                android:text="年"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                android:drawableRight="@mipmap/icon_arrow_down"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:drawablePadding="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:text="班级选择"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />


        <TextView
            android:id="@+id/tv_province"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:lines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_course"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:lines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />
        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:lines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_subgrade"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:lines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_semester"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:lines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_20"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:visibility="gone"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />

        <TextView
            android:id="@+id/tv_custom"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="@dimen/dp_45"
            android:drawablePadding="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:visibility="gone"
            android:gravity="center"
            android:background="@drawable/click_btn_line_black_5dp"
            />

        <TextView
            android:id="@+id/tv_custom_1"
            android:layout_width="@dimen/navigation_type_width"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/click_btn_line_black_5dp"
            />

        <TextView
            android:id="@+id/tv_btn_2"
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/click_btn_line_black_5dp"
            />

        <TextView
            android:id="@+id/tv_btn_1"
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/click_btn_line_black_5dp"
            />


        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_20"
            android:visibility="gone"
            android:scaleType="center"
            android:background="@drawable/click_btn_transparent_line_black"
            />

        <ImageView
            android:id="@+id/iv_manager"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@mipmap/icon_manager"
            android:scaleType="center"
            android:visibility="gone"
            android:background="@drawable/click_btn_transparent_line_black"
            />

    </LinearLayout>


</LinearLayout>
