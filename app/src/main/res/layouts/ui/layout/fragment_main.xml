<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="33dp"
            android:textColor="@color/black"
            android:textSize="36sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_date_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_40"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:id="@+id/tv_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:drawableStart="@mipmap/icon_diary"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:text="日记"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_free_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_60"
                android:text="随笔"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:gravity="center"
                android:drawablePadding="@dimen/dp_10"
                android:drawableStart="@mipmap/icon_freenote"
                />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="784dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/icon_main_content_bg_2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_content_title_height"
            android:drawablePadding="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="@string/main_button_message"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            app:drawableLeftCompat="@mipmap/icon_main_message"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="394dp"
            android:background="@mipmap/icon_main_content_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_course"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/main_content_title_height">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/main_button_classes"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@mipmap/icon_main_course" />

                <TextView
                    android:id="@+id/tv_course_module"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模板"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/dp_20"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginEnd="8dp"
                />

            <ImageView
                android:id="@+id/iv_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="18dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="@dimen/dp_20"
                />


        </LinearLayout>


        <View
            android:layout_width="44dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:id="@+id/ll_note"
            android:layout_width="374dp"
            android:layout_height="394dp"
            android:background="@mipmap/icon_main_content_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/main_content_title_height">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/main_button_note"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@mipmap/icon_main_note" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginEnd="8dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_8" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_teaching"
            android:layout_width="374dp"
            android:layout_height="585dp"
            android:background="@mipmap/icon_main_content_bg_1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height"
                android:drawablePadding="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/main_button_teaching"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:drawableLeftCompat="@mipmap/icon_main_plan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginEnd="8dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_teaching"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_15"/>


        </LinearLayout>
        <View
            android:layout_width="44dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="585dp"
            android:background="@mipmap/icon_main_content_bg_1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_content_title_height"
                android:drawablePadding="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/main_button_homework"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:drawableStartCompat="@mipmap/icon_main_homework" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginEnd="8dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_homework"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_15"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>