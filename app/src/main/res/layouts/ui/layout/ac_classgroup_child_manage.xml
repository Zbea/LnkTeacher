<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:paddingTop="@dimen/statusbar_height"
    android:orientation="vertical">

    <include
        layout="@layout/common_title"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级名称"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26"
            />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:gravity="center"
            android:text="添加"
            android:background="@drawable/click_btn_line_black_5dp"
            />

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:background="@drawable/bg_black_stroke_10dp_corner"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        >

        <TextView
            android:id="@+id/tv_class_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级名称"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26"
            />

        <TextView
            android:id="@+id/tv_out"
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25"
            android:gravity="center"
            android:text="踢出"
            android:background="@drawable/click_btn_line_black_5dp"
            />

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_50"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:background="@drawable/bg_black_stroke_10dp_corner"
        />


</LinearLayout>