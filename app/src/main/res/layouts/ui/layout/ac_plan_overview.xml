<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical"
    android:paddingTop="@dimen/statusbar_height">

    <include
        android:id="@+id/ll_title"
        layout="@layout/common_title" />

    <RelativeLayout
        android:id="@+id/ll_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:layout_marginTop="@dimen/dp_15">

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="105dp"
                android:background="@drawable/bg_rb_line_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="月计划"
                android:textColor="@drawable/color_black_gray_selector"
                android:textSize="@dimen/sp_26"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_week"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="35dp"
                android:background="@drawable/bg_rb_line_selector"
                android:button="@null"
                android:gravity="center"
                android:text="周计划"
                android:textColor="@drawable/color_black_gray_selector"
                android:textSize="@dimen/sp_26"
                android:textStyle="bold" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/click_btn_transparent_line_black"
                android:scaleType="center"
                android:src="@mipmap/icon_date_arrow_up" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/click_btn_transparent_line_black"
                android:scaleType="center"
                android:src="@mipmap/icon_date_arrow_down" />

        </LinearLayout>

    </RelativeLayout>

    <com.android.internal.widget.PreferenceImageView
        android:id="@+id/v_content_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_function"
        android:layout_marginStart="@dimen/drawing_tool_width"
        android:src="@mipmap/icon_freenote_bg_1" />

    <include layout="@layout/common_drawing_tool" />

</RelativeLayout>