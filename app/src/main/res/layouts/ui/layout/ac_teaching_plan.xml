<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/statusbar_height"
    android:background="@color/bg_page"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_height"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="52dp"
                android:paddingEnd="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_back"
                android:textColor="@color/black"
                android:textSize="@dimen/navigation_text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"
                    android:drawableRight="@mipmap/icon_arrow_down"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:text="2022"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:text="年"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_26" />

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"
                    android:drawableRight="@mipmap/icon_arrow_down"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:textSize="@dimen/sp_26" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期一"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期二"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期三"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期四"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期五"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期六"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期日"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/bg_black_stroke_0dp_corner"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="教学内容输入"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                />

            <ImageView
                android:id="@+id/iv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_save"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/black"
            android:gravity="top"
            android:lines="2"
            android:padding="@dimen/dp_15"
            android:lineSpacingExtra="8dp"
            android:ellipsize="end"
            android:textSize="@dimen/sp_22"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="教学内容移动"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                />

            <ImageView
                android:id="@+id/iv_move_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_save"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            android:padding="@dimen/dp_30"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_move_start_time"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="开始时间"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="~"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_move_end_time"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="结束时间"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_gray_stroke_5dp_corner"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_num"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="10"
                    android:inputType="number"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="center"
                    android:background="@drawable/bg_line_bottom"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="天"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    />

                <RadioGroup
                    android:id="@+id/rg_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rb_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:checked="true"
                        android:text="  往前"
                        android:button="@drawable/bg_check_selector"
                        />

                    <RadioButton
                        android:id="@+id/rb_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:text="  往后"
                        android:button="@drawable/bg_check_selector"
                        />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="教学内容复制"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_24"
                    />

                <ImageView
                    android:id="@+id/iv_copy_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_save"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                android:padding="@dimen/dp_30"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_copy_start_time"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="开始时间"
                        android:textSize="@dimen/sp_22"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="~"
                        android:textSize="@dimen/sp_22"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_copy_end_time"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="结束时间"
                        android:textSize="@dimen/sp_22"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_all_copy"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:button="@drawable/bg_check_selector"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_22"
                        android:text=" 全部"
                        />


                    <TextView
                        android:id="@+id/tv_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:drawableRight="@mipmap/icon_arrow_down"
                        android:text="选择班级"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_22"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="教学内容删除"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                />

            <ImageView
                android:id="@+id/iv_delete_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_save"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            android:padding="@dimen/dp_30"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_delete_start_time"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="开始时间"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="~"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_delete_end_time"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="结束时间"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/black"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <CheckBox
                    android:id="@+id/cb_all_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:button="@drawable/bg_check_selector"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:text=" 全部"
                     />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>