<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/statusbar_height"
    android:background="@color/bg_page"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <include
            layout="@layout/common_title"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期一"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期二"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期三"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期四"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期五"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期六"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星期日"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/bg_black_stroke_0dp_corner"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_130"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_content_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="教学内容输入"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/iv_save"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="保存"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                android:gravity="center"
                android:background="@drawable/click_btn_transparent_line_black"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/black"
            android:gravity="top"
            android:lines="2"
            android:padding="@dimen/dp_15"
            android:lineSpacingExtra="8dp"
            android:ellipsize="end"
            android:textSize="@dimen/sp_25"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_50"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="教学计划复制"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/iv_copy_save"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="复制"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/click_btn_transparent_line_black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            android:padding="@dimen/dp_30"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_copy_start_time"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="开始时间"
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="~"
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tv_copy_end_time"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="结束时间"
                    android:textSize="@dimen/sp_25"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/cb_all_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:button="@drawable/bg_check_selector"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:text=" 全部"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_copy_class"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="@dimen/dp_20"
                    android:drawableRight="@mipmap/icon_arrow_down"
                    android:text="选择班级"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_25"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"
                    />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="教学计划修改"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:background="@drawable/bg_black_stroke_5dp_corner"
            android:padding="@dimen/dp_30"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="教学内容移动"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/iv_move_save"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:text="移动"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/click_btn_transparent_line_black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                android:padding="@dimen/dp_30"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_move_start_time"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="开始时间"
                        android:textSize="@dimen/sp_25"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="~"
                        android:textSize="@dimen/sp_25"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_move_end_time"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="结束时间"
                        android:textSize="@dimen/sp_25"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/bg_gray_stroke_5dp_corner"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_num"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="1"
                        android:inputType="number"
                        android:layout_marginStart="@dimen/dp_20"
                        android:gravity="center"
                        android:background="@drawable/bg_line_bottom"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_25" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="天"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_25"
                        />

                    <RadioGroup
                        android:id="@+id/rg_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:orientation="horizontal"
                        >

                        <RadioButton
                            android:id="@+id/rb_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:checked="true"
                            android:text="  往前"
                            android:button="@drawable/bg_check_selector"
                            />

                        <RadioButton
                            android:id="@+id/rb_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:gravity="center_vertical"
                            android:text="  往后"
                            android:button="@drawable/bg_check_selector"
                            />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="教学内容删除"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/iv_delete_save"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:text="删除"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/click_btn_transparent_line_black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:background="@drawable/bg_black_stroke_5dp_corner"
                android:padding="@dimen/dp_30"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_delete_start_time"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="开始时间"
                        android:textSize="@dimen/sp_25"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="~"
                        android:textSize="@dimen/sp_25"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/tv_delete_end_time"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="结束时间"
                        android:textSize="@dimen/sp_25"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <CheckBox
                        android:id="@+id/cb_all_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:button="@drawable/bg_check_selector"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_25"
                        android:text=" 全部"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>