<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:paddingTop="@dimen/statusbar_height"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/bg_gray_stroke_10dp_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="平均分"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26" />

        <TextView
            android:id="@+id/tv_average_score"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center"
            android:textColor="@color/black_30"
            android:textSize="@dimen/sp_26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:text="已批改："
            android:textSize="@dimen/sp_26"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_correct_number"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_26"
            android:gravity="center"
            android:textColor="@color/black_30"
            android:background="@drawable/bg_line_bottom"
            />

        <TextView
            android:id="@+id/tv_score_pop"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_30"
            android:drawableEnd="@mipmap/icon_arrow_down"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_5"
            android:text="60分"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26" />

        <TextView
            android:id="@+id/tv_score_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="以上"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/bg_line_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black_30"
                android:textSize="@dimen/sp_26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="人"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_26" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_score_down"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_30"
            android:drawableEnd="@mipmap/icon_arrow_down"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_5"
            android:text="60分"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="以下"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:visibility="gone"
            android:background="@drawable/bg_line_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black_30"
                android:textSize="@dimen/sp_26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="人"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_26" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_gray_stroke_10dp_corner"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawing_bottom_height">

                <ImageView
                    android:id="@+id/iv_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_50"
                    android:src="@mipmap/icon_draw_page_up" />

                <TextView
                    android:id="@+id/tv_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

                <ImageView
                    android:id="@+id/iv_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:src="@mipmap/icon_draw_page_down" />
            </RelativeLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_30"
            />

    </LinearLayout>


</LinearLayout>