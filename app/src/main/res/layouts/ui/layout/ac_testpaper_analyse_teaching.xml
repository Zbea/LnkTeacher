<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:paddingTop="@dimen/statusbar_height"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="40dp"
        />

    <LinearLayout
        android:id="@+id/ll_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_left_score"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/black_30"
            android:textSize="@dimen/sp_26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="~"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26" />

        <TextView
            android:id="@+id/tv_right_score"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center"
            android:hint="100"
            android:textColor="@color/black_30"
            android:textSize="@dimen/sp_26" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_50"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="第"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26" />
        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_bottom"
            android:gravity="center"
            android:textColor="@color/black_30"
            android:textSize="@dimen/sp_26" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="题"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_26" />

        <LinearLayout
            android:id="@+id/ll_topic_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_20"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="第"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_26" />
            <TextView
                android:id="@+id/tv_topic_child"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_line_bottom"
                android:gravity="center"
                android:textColor="@color/black_30"
                android:textSize="@dimen/sp_26" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="题"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_26" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  对"
                android:checked="true"
                android:button="@drawable/bg_check_selector"
                />

            <RadioButton
                android:id="@+id/rb_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:text="  错"
                android:button="@drawable/bg_check_selector"
                />
        </RadioGroup>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_50"
        android:padding="@dimen/dp_40"
        android:background="@drawable/bg_black_stroke_10dp_corner"
        />

</LinearLayout>